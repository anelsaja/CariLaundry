<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cari"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CariLaundry"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="12dp"/>

        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/outline_favorite_24" android:layout_marginEnd="16dp" app:tint="@color/black"/>
        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/outline_notifications_24" android:layout_marginEnd="16dp" app:tint="@color/black"/>
        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/outline_logout_24" app:tint="@color/black"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/layoutHeader"
        android:layout_marginHorizontal="16dp"
        android:background="#EEEEEE"
        android:hint="Cari Tempat Laundry..."
        android:paddingStart="16dp"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/tvTitleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSearch"
        android:layout_marginStart="16dp"
        android:text="Laundry terdekat"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLaundry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitleSection"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="8dp"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="2"
        tools:listitem="@layout/item_laundry"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24"
            app:tint="@color/black"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_swap"
            app:tint="@color/black"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/outline_account_circle_24"
            app:tint="@color/black"/>
    </LinearLayout>

</RelativeLayout>